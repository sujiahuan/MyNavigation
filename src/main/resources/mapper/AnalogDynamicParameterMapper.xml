<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jiahuan.mapper.analog.AnalogDynamicParameterMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jiahuan.entity.analog.AnalogDynamicParameter">
        <id column="id" property="id"/>
        <result column="device_id" property="deviceId"/>
        <result column="divisorId" property="divisorId"/>
        <result column="value" property="value"/>
        <result column="type" property="type"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modify" property="gmtModified"/>
    </resultMap>

    <select id="getDynamicParameterById" resultType="org.jiahuan.entity.analog.AnalogDynamicParameter">
        select t1.*,t3.name,t3.code as divisor_name from analog_code_parameter t1
        left join analog_code t2 on t1.code_id=t2.id
        left join sys_divisor t3 on t3.id=t2.divisor_id
        <where>
            t1.id=#{id}
        </where>
    </select>


    <select id="getDynamicParameterByDeviceId" resultType="org.jiahuan.entity.analog.AnalogDynamicParameter">
        select t1.*,t3.name,t3.code as divisor_name from analog_code_parameter t1
        left join analog_code t2 on t1.code_id=t2.id
        left join sys_divisor t3 on t3.id=t2.divisor_id
            t1.device_id=#{deviceId}
            <if test="type gt 0">
                and type=#{type}
            </if>

    </select>

</mapper>
